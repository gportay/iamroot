_iamroot-shell()
{
	local cur prev words cword DEBUG_IGNORE
	_init_completion || return

	DEBUG_IGNORE=( __fstat __fstat64 __fxstat __fxstat64 __fxstatat
		__fxstatat64 __lxstat __lxstat64 __nss_files_fopen __open
		__open64 __open64_2 __open_2 __openat64_2 __openat_2 __opendir
		__opendirat __statfs __statfs64 __xmknod __xmknodat __xstat
		__xstat64 access canonicalize_file_name chdir chmod chown
		chroot creat creat64 dlmopen dlopen eaccess euidaccess execl
		execle execlp execv execve execvp execvpe faccessat fchdir
		fchmodat fchown fchownat fexecve fopen fopen64
		fpath_resolutionat freopen freopen64 fstat fstat64 fstatat
		fstatat64 futimesat get_current_dir_name getcwd geteuid getuid
		getwd getxattr lchmod lchown lgetxattr link linkat listxattr
		llistxattr lremovexattr lsetxattr lstat lstat64 lutimes mkdir
		mkdirat mkdtemp mkfifo mkfifoat mknod mknodat mkostemp
		mkostemp64 mkostemps mkostemps64 mkstemp mkstemp64 mkstemps
		mkstemps64 mktemp mount name_to_handle_at open open64 openat
		openat64 opendir opendir64 path_resolution posix_spawn
		posix_spawnp readlink readlinkat realpath remove removexattr
		rename renameat renameat2 rmdir running_in_chroot scandir
		scandirat setxattr stat stat64 statfs statfs64 statvfs
		statvfs64 statx symlink symlinkat tempnam tmpnam tmpnam_r
		truncate umount umount2 unlink unlinkat unshare utime utimensat
		utimes)

	COMMON_PATH=(/bin /sbin /usr/bin /usr/sbin /usr/local/bin
		/usr/local/sbin)

	COMMON_LD_LIBRARY_PATH=(/lib /usr/lib /usr/local/lib)

	case "$prev" in
	--chroot)
		_filedir -d
		return
		;;
	--exec)
		_filedir
		return
		;;
	--library)
		_filedir so
		return
		;;
	--path)
		local prefix realcur wordlist
		realcur="${cur##*\:}"
		prefix="${cur%$realcur}"
		for WORD in "${COMMON_PATH[@]}"
		do
			if ! [[ $prefix == *"$WORD"* ]]
			then
				wordlist+=("$WORD")
			fi
		done
		compopt -o nospace
		COMPREPLY=($(compgen -P "$prefix" -W "${wordlist[*]}" -S '\:' -- "$realcur"))
		return 0
		;;
	--ld-library-path)
		local prefix realcur wordlist
		realcur="${cur##*\:}"
		prefix="${cur%$realcur}"
		for WORD in "${COMMON_LD_LIBRARY_PATH[@]}"
		do
			if ! [[ $prefix == *"$WORD"* ]]
			then
				wordlist+=("$WORD")
			fi
		done
		compopt -o nospace
		COMPREPLY=($(compgen -P "$prefix" -W "${wordlist[*]}" -S '\:' -- "$realcur"))
		return 0
		;;
	--debug-ignore)
		local prefix realcur wordlist
		realcur="${cur##*\|}"
		prefix="${cur%$realcur}"
		for WORD in "${DEBUG_IGNORE[@]}"
		do
			if ! [[ $prefix == *"$WORD"* ]]
			then
				wordlist+=("$WORD")
			fi
		done
		compopt -o nospace
		COMPREPLY=($(compgen -P "$prefix" -W "${wordlist[*]}" -S '\|' -- "$realcur"))
		return 0
		;;
	--exec-ignore)
		local prefix realcur wordlist
		realcur="${cur##*\|}"
		prefix="${cur%$realcur}"
		COMPREPLY=($(compgen -c -- "${realcur}"))
		for WORD in "${COMPREPLY[@]}"
		do
			if ! [[ $prefix == *"$WORD"* ]]
			then
				wordlist+=("$WORD")
			fi
		done
		compopt -o nospace
		COMPREPLY=($(compgen -P "$prefix" -W "${wordlist[*]}" -S '\|' -- "$realcur"))
		return 0
		;;
	--path-resolution-ignore)
		local prefix realcur wordlist
		realcur="${cur##*\|}"
		prefix="${cur%$realcur}"
		COMPREPLY=($(compgen -d -S '/' -- "${realcur}"))
		for WORD in "${COMPREPLY[@]}"
		do
			if ! [[ $prefix == *"$WORD"* ]]
			then
				wordlist+=("$WORD")
			fi
		done
		compopt -o nospace
		COMPREPLY=($(compgen -P "$prefix" -W "${wordlist[*]}" -S '\|' -- "$realcur"))
		return 0
		;;
	esac

	COMP_WORDS=("${SHELL:sh}" "${COMP_WORDS[@]:2}" "$cur")
	COMP_LINE="${COMP_WORDS[*]}"
	COMP_POINT="${#COMP_LINE}"
	_command_offset 0

	local i shell
	for (( i=0; i < "${#words[@]}"; i++ ))
	do
		if [[ "${words[i]}" == -- ]]
		then
			shell=1
			break
		fi
	done

	if [[ "$shell" != 1 ]]
	then
		COMPREPLY+=($(compgen -W "--chroot --path --ld-library-path --exec --library --fatal --debug --debug-ignore --exec-ignore --path-resolution-ignore --version" -- "$cur"))
	fi
} &&
complete -F _iamroot-shell iamroot-shell
