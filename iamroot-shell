usage() {
	cat <<EOF
Usage: ${0##*/} [--force] [--help] [--] [SHELL_ARGUMENTS...]
EOF
}

argv=()
while [[ "$#" -ne 0 ]]
do
	if [[ "$1" == "--help" ]]
	then
		usage
		exit 0
	elif [[ "$1" == "--force" ]]
	then
		IAMROOT_FORCE=1
		export IAMROOT_FORCE
	elif [[ "$1" == "--" ]]
	then
		shift
		break
	else
		break
	fi
	shift
done

IAMROOTLVL="$((IAMROOTLVL+1))" \
LD_PRELOAD="$PWD/libiamroot.so${LD_PRELOAD+:$LD_PRELOAD}" \
exec fakeroot "${SHELL:-/bin/sh}" "${argv[@]}" "$@"
